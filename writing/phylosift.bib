@article{Kembel2011,
    author = {Kembel, Steven W. AND Eisen, Jonathan A. AND Pollard, Katherine S. AND Green, Jessica L.},
    journal = {PLoS ONE},
    publisher = {Public Library of Science},
    title = "{The Phylogenetic Diversity of Metagenomes}",
    year = {2011},
